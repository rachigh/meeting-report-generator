# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Documentation
*.md text
*.txt text
*.rst text

# Configuration files
*.json text
*.yaml text
*.yml text
*.toml text
*.ini text
*.cfg text

# Git
.gitattributes text
.gitignore text

# Archives
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Audio/Video
*.mp3 binary
*.wav binary
*.m4a binary
*.ogg binary
*.webm binary
*.mp4 binary
*.avi binary

# Documents
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary
